{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            {% if users is empty %}
            <p>Il n'y a aucun utilisateur</p>
            {% else %}
                <ul>
                    {% for user in users %}
                        <li><a href="{{path('singleUser', {id: user.id})}}">{{user.nom|capitalize}} {{user.prenom|capitalize}} {{user.tasks|length}}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="col-6">
            {{form_start(formUser)}}
            {{form_end(formUser)}}
        </div>
    </div>
</div>
{% endblock %}
